@model MedicalStore.Models.ProductViewModel
@{
    ViewBag.Title = "AddProduct";
}

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.EditorFor(i => i.Name, additionalViewData: new { htmlAttributes = new { @class = "form-control", placeholder = "Product Name" } })
        @Html.ValidationMessageFor(i => i.Name, "", htmlAttributes: new { @class = "from-control" })
    </div>
    <div class="form-group">
        @Html.EditorFor(i => i.Description, additionalViewData: new { htmlAttributes = new { @class = "form-control" , placeholder = "Description" } })
        @Html.ValidationMessageFor(i => i.Description, "", htmlAttributes: new { @class = "from-control" })
    </div>
    <div class="form-group">
        @Html.EditorFor(i => i.QuantityInStock, additionalViewData: new { htmlAttributes = new { @class = "form-control" , placeholder = "Quantity In Stock" } })
        @Html.ValidationMessageFor(i => i.QuantityInStock, "", htmlAttributes: new { @class = "from-control" })
    </div>
    <div class="form-group">
        @Html.HiddenFor(i => i.Image)
        <label class="col-form-label">Prpduct image</label>
        <input type="file" name="prodImg" class="form-control-file" id="imgfile" required>
        @Html.ValidationMessageFor(i => i.Name, "", htmlAttributes: new { @class = "from-control" })
    </div>
    <div class="form-group">
        @Html.EditorFor(i => i.Price, additionalViewData: new { htmlAttributes = new { @class = "form-control" , placeholder = "Price" } })
        @Html.ValidationMessageFor(i => i.Price, "", htmlAttributes: new { @class = "from-control" })
    </div>
    <div class="form-group">
        @Html.EditorFor(i => i.CategoryId, additionalViewData: new { htmlAttributes = new { @class = "form-control" , placeholder = "Category Id" } })
        @Html.ValidationMessageFor(i => i.CategoryId, "", htmlAttributes: new { @class = "from-control" })
    </div>
    <input type="submit" value="Add Product" class="btn btn-outline-success" />
 }

