@model IEnumerable<MedicalStore.Models.CategoryViewModel>

@{
    ViewBag.Title = "Cats";
}

@*<h2>Cats</h2>*@


<div>
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(aa => aa.Name)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(aa => item.Name)
                </td>
                <td>

                    @Html.ActionLink("Edit", "UpdateCategory", "categories", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })

                    @Html.ActionLink("Delete", "deleteCategory", "categories", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger", onclick = "return confirm('R U Sure')" })

                </td>
            </tr>
        }
    </table>
</div>