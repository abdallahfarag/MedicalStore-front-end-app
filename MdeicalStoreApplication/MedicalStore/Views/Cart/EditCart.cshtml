@model CartViewModel

@using (Ajax.BeginForm("EditCart", "Cart", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "Cart", InsertionMode = InsertionMode.Replace, OnSuccess = "EditToggle()",OnFailure= "EditToggle()" }))
{
    @Html.HiddenFor(i => i.UserId)
    @Html.HiddenFor(i => i.ProductId)
    <div class="form-group">
        @Html.LabelFor(i => i.Quantity)
        @Html.EditorFor(i => i.Quantity, additionalViewData: new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(i => i.Quantity, "", htmlAttributes: new { @class = "text-danger" })
    </div>
    <input type="submit" value="Save" class="btn btn-outline-primary" />
}
