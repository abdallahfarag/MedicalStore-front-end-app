
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order info</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/done.css" rel="stylesheet" />
</head>
<body>
    <div class="main-castumer-hader">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h2>Medecal Store</h2>
                </div>
                <div class="col-md-3 col-xs-12">
                    <ul>
                        <li><button>Home</button></li>
                        <li><button>Cart</button></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- //////////// -->
    <div class="container">
        <div class="row">
            <div class="main-data col-md-12 col-xs-12">
                <!-- castumer data -->
                <div class="c-data">
                    <h2 class="des-data">Add an Address</h2>
                    <form action="#" name="mayform">
                        <label for="city">Address*</label>
                        <input type="text" name="city" id="city" required />
                        <label for="phone">Phone*</label>
                        <input type="number" name="phone" id="phone" required />
                        <label for="">Enter More Informtion For Easy Communication (Optional)</label>
                        <textarea name="" id="" cols="30" rows="5"></textarea>
                        <input type="submit" value="Next" class="next" onclick="go()" />
                    </form>
                </div>
            </div>
            <div class="c-pay col-md-12 col-xs-12">
                <div class="p-data" style="display: none;">
                    <h1>Payment Method</h1>
                    <div class="first-img">
                        <a href="#">
                            <img src="cash.png" alt="" srcset="" onclick="cash()" />
                        </a>
                        <a href="#">
                            <img src="paypal.png" alt="" srcset="" />
                        </a>
                    </div>
                </div>
                <div class="finsh" style="display: none;">
                    <i class="far fa-check-circle"></i>
                    <p>successfully</p>
                    <div class="qq">
                        <p>Do You Wont To Buy Other Products?..</p>
                        <button>Yes</button>
                        <button>Thanks</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- scripts -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/fontawesome-free-5.13.0-web/js/all.min.js"></script>
    <script src="~/Scripts/done.js"></script>
</body>
</html>

